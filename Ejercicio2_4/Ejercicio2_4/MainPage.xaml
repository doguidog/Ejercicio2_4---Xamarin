<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:video="clr-namespace:Xam.Forms.VideoPlayer;assembly=Xam.Forms.VideoPlayer"
             x:Class="Ejercicio2_4.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label Text="Marvin Martinez - Video" HorizontalTextAlignment="Center" TextColor="White" FontSize="22"/>
        </Frame>
        <video:VideoPlayer x:Name="video"  BackgroundColor="White" HorizontalOptions="Center" HeightRequest="300"  />

        <Entry Placeholder="Descripcion" Margin="30,10,30,0" x:Name="txtdescripcion"/>

        <Button Text="Grabar Video" x:Name="btnGrabar" Clicked="btnGrabar_Clicked"  CornerRadius="0" Margin="50,10,50,10" BackgroundColor="Yellow"/>

        <Button Text="Guardar" x:Name="btnSalvar" Clicked="btnSalvar_Clicked"  CornerRadius="0" Margin="50,10,50,10" BackgroundColor="Yellow"/>

        <Button Text="Listar" Grid.ColumnSpan="2" x:Name="btnlistarvideo"  Clicked="btnlistarvideo_Clicked"  CornerRadius="0" Margin="50,10,50,10" BackgroundColor="Yellow"/>

    </StackLayout>

</ContentPage>
