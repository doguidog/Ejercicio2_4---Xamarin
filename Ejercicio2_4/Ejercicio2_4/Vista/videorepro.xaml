<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:video="clr-namespace:Xam.Forms.VideoPlayer;assembly=Xam.Forms.VideoPlayer"
             x:Class="Ejercicio2_4.Vista.videorepro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Descripcion" x:Name="lbldescripcion" VerticalOptions="CenterAndExpand" FontSize="15" HorizontalTextAlignment="Center"/>
            <video:VideoPlayer x:Name="recor"  BackgroundColor="White" HorizontalOptions="Center" HeightRequest="500" />
            <Button Text="Atras" Grid.Column="0" x:Name="btnatras" Clicked="btnatras_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>